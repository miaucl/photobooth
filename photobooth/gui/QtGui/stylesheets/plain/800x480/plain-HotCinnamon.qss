/* Color Accent */

/* strong: #e1611b */
/* light: #f3bfa2 */

/* Outer items */

QWidget {
    background-color: transparent;
    font-family: "Amatic SC", AmaticSC, sans-serif;
    font-size: 30px;
    font-weight: 800;
}

QMainWindow {
    background: #000000;
    color: #ffffff;
}

/* General controls */

QPushButton {
    background-color: #e1611b;
    border-radius: 8px;
    color: #000000;
    padding: 8px;
    text-align: center;
}

QPushButton:pressed {
    background-color: #f3bfa2;
    color: #000000;
}

QLabel {
    qproperty-alignment: AlignCenter;
    color: #e1611b;
}

/* Welcome Screen */

QFrame#WelcomeMessage {
    padding: 30px;
}

QFrame#WelcomeMessage QLabel {
    font-size: 40px;
}

QFrame#WelcomeMessage QLabel#WelcomeMessageLink {
    font-size: 20px;
}


/* Idle Screen */

QFrame#IdleMessage {
}

QFrame#IdleMessage QFrame#IdleContainer {
    margin: 60px 20px 60px 20px;
    padding: 40px 20px 20px 20px;
    border-radius: 8px;
}

QFrame#IdleMessage QLabel#HeaderLabel {
    font-size: 80px;
    color: #ffffff;
}

QFrame#IdleMessage QPushButton {
    font-size: 120px;
    text-align: center;
}

QFrame#IdleMessage QPushButton#PhotoButton {
    border-width: 4px;
    border-color: #f3bfa2;
    border-style: solid;
}

QFrame#IdleMessage QPushButton:pressed {
}

QFrame#IdleMessage QPushButton#GalleryButton {
    font-size: 30px;
}

QFrame#IdleMessage QLabel#PrintLabel {
    font-size: 30px;
    color: #ffffff;
}


/* Slideshow Screen */

QFrame#SlideshowMessage {
    margin: 0px;
}

QFrame#SlideshowMessage QLabel#StartLabel {
    font-size: 24px;
    background: #f3bfa2;
    color: #000000;
    padding: 4px;
}

/** Gallery Message */

QFrame#GalleryMessage {
    margin: 0px;
}

QFrame#GalleryMessage QLabel {
    font-size: 40px;
}

/* Gallery Select overlay */

QWidget#GallerySelectOverlay {
    background-color: #ffffff;
    padding: 8px;
}

/* Gallery Select message */

QWidget#GallerySelectMessage QLabel {
    font-size: 40px;
}

QWidget#GallerySelectMessage QPushButton {
    padding: 8px 16px 8px 16px;
}

QWidget#GallerySelectMessage QPushButton:disabled {
    background-color: #eeeeee;
    color: #666666;
}

/* Greeter Screen */

QFrame#GreeterMessage {
}

QFrame#GreeterMessage QFrame#GreeterContainer {
    margin: 60px 20px 60px 20px;
    padding: 40px 20px 20px 20px;
    border-radius: 8px;
}

QFrame#GreeterMessage QLabel#Message {
    font-size: 40px;
    background: #f3bfa2;
    color: #000000;
    padding: 4px;
    border-radius: 8px;
}

QFrame#GreeterMessage QPushButton#Button {
    font-size: 80px;
    margin: 0;
    min-height: 100px;
    padding: 0;
}



/* Countdown Screen */

QFrame#CountdownMessage {
}

/* Pose Screen */

QFrame#PoseMessage {
    background-color: #ffffff;
}

QFrame#PoseMessage QLabel {
    font-size: 60px;
}

/* Wait Screen */

QFrame#WaitMessage {
    padding: 350px 80px 80px 80px;
}

QFrame#WaitMessage QLabel {
    font-size: 40px;
}

/* Picture Screen */

QFrame#PictureMessage {
    margin: 30px;
}

/* Overlay message */

QWidget#TransparentOverlay {
    background-color: transparent;
    padding: 40px;
}

/* Postprocess message */

QWidget#PostprocessMessage QLabel {
    font-size: 60px;
}

QWidget#PostprocessMessage QPushButton:disabled {
    background-color: #eeeeee;
    color: #666666;
}


/* Customizing settings */

QTabWidget::pane {
    font-size: 12px;
    border-style: solid;
    border-width: 1px;
    border-radius: 15px;
    border-color: #e1611b;
    color: #e1611b;
    padding: 10px;
    margin: 0; 
}

QTabWidget::tab-bar {
    alignment: center;
}

QTabBar::tab {
    background-color: transparent;
    border-style: solid;
    border-width: 1px;
    border-bottom: none;
    border-top-left-radius: 4px;
    border-top-right-radius: 4px;
    border-color: #e1611b;
    padding: 2px;
    font-size: 12px;
}

QTabBar::tab:selected {
    background-color: #f3bfa2;
    color: #000000;
}

QGroupBox {
    background-color: transparent;
    border-style: solid;
    border-width: 1px;
    border-radius: 15px;
    border-color: #e1611b;
    margin: 0px;
    padding: 4px;
    font-size: 12px;
}

QTabWidget QWidget {
    color: #e1611b;
    font-size: 12px;
}

QCheckBox::indicator {
    width: 18px;
    height: 18px;
    background-color: transparent;
    border-style: solid;
    border-width: 1px;
    border-radius: 5px;
    border-color: #e1611b;
}

QCheckBox::indicator::checked {
    background-image: url(photobooth/gui/QtGui/images/checkmark.png);
    background-repeat: no-repeat;
}

QComboBox, QDateEdit, QLineEdit, QSpinBox, QTimeEdit {
    background-color: #000000;
    color: #e1611b;
    font-size: 12px;
}

QComboBox QAbstractItemView {
    background-color: #000000;
    color: #e1611b;
    selection-background-color: #f3bfa2;
    selection-color: #e1611b;
}

QComboBox QAbstractItemView::item {
    margin: 5px;
    min-height: 50px;
}