{
  // See https://go.microsoft.com/fwlink/?LinkId=733558
  // for the documentation about the tasks.json format
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Python: Start Photobooth",
      "type": "shell",
      "command": ".venv/bin/python -m photobooth",
      "problemMatcher": [],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "presentation": {
        "focus": true,
        "reveal": "always"
      },
      "options": {
        "cwd": "${workspaceFolder}",
        "env": {
          "LANG": "fr"
        }
      }
    },
    {
      "label": "Python: Debug Photobooth",
      "type": "shell",
      "command": ".venv/bin/python -m photobooth --debug",
      "problemMatcher": [],
      "group": {
        "kind": "build"
      },
      "presentation": {
        "focus": true,
        "reveal": "always"
      },
      "options": {
        "cwd": "${workspaceFolder}"
      }
    },
    {
      "label": "Python: Run Photobooth",
      "type": "shell",
      "command": ".venv/bin/python -m photobooth --run",
      "problemMatcher": [],
      "group": {
        "kind": "build"
      },
      "presentation": {
        "focus": true,
        "reveal": "always"
      },
      "options": {
        "cwd": "${workspaceFolder}"
      }
    },
    {
      "label": "Python: Build and run Photobooth (docker)",
      "type": "shell",
      "command": "bash supplementals/builds/docker/start.sh ${input:docker_start_script_param}",
      "problemMatcher": [],
      "group": {
        "kind": "build"
      },
      "presentation": {
        "focus": true,
        "reveal": "always"
      },
      "options": {
        "cwd": "${workspaceFolder}"
      }
    },
    {
      "label": "Deploy: Classic",
      "type": "shell",
      "command": "bash supplementals/builds/classic/deploy.sh ${input:deploy_host_param}",
      "problemMatcher": [],
      "group": {
        "kind": "build"
      },
      "presentation": {
        "focus": true,
        "reveal": "always"
      },
      "options": {
        "cwd": "${workspaceFolder}"
      }
    },
    {
      "label": "Deploy: Pro",
      "type": "shell",
      "command": "bash supplementals/builds/pro/deploy.sh ${input:deploy_host_param}",
      "problemMatcher": [],
      "group": {
        "kind": "build"
      },
      "presentation": {
        "focus": true,
        "reveal": "always"
      },
      "options": {
        "cwd": "${workspaceFolder}"
      }
    }
  ],
  "inputs": [
    {
      "id": "docker_start_script_param",
      "description": "Choose the start script",
      "default": "autostart.sh",
      "options": ["autostart.sh", "autorun.sh", "autousb.sh"],
      "type": "pickString"
    },
    {
      "id": "deploy_host_param",
      "description": "Provide the deploy target (host/IP)",
      "default": "photobooth.local",
      "type": "promptString"
    },
  ]
}